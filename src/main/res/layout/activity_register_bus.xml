    <EditText
        android:id="@+id/bus_no"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:maxLines="1"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/edit_text_background"
        android:drawableLeft="@drawable/ic_username"
        android:drawablePadding="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/gilroy"
        android:hint="Bus No"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/bus_root"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:maxLines="1"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/edit_text_background"
        android:drawableLeft="@drawable/ic_location"
        android:drawablePadding="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/gilroy"
        android:hint="Bus Root"
        android:inputType="number"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bus_no" />


    <EditText
        android:id="@+id/license_id"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:maxLines="1"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/edit_text_background"
        android:drawableLeft="@drawable/ic_license"
        android:drawablePadding="10dp"
        android:ellipsize="end"
        android:inputType="number"
        android:fontFamily="@font/gilroy"
        android:hint="License Id"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bus_root" />

    <EditText
        android:id="@+id/drivers_name"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:maxLines="1"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/edit_text_background"
        android:drawableLeft="@drawable/ic_car"
        android:drawablePadding="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/gilroy"
        android:hint="Driver's Name"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/license_id" />

    <EditText
        android:id="@+id/number"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:maxLines="1"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/edit_text_background"
        android:drawableLeft="@drawable/ic_phone"
        android:drawablePadding="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/gilroy"
        android:hint="Mobile Number"
        android:inputType="phone"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drivers_name" />

    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:maxLines="1"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/edit_text_background"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/gilroy"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number" />


    <EditText
        android:id="@+id/confirm_pw"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:maxLines="1"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/edit_text_background"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/gilroy"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />


